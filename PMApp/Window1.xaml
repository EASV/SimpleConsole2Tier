<Window x:Class="PMApp.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PMApp"
        mc:Ignorable="d"
        Title="Add Person" Height="200" Width="400">
    <StackPanel>
        <Label Content="Name:"></Label>
        <TextBox Name="TxtName"></TextBox>
        <Label Content="Email:"></Label>
        <TextBox Name="TxtEmail"></TextBox>
        <StackPanel VerticalAlignment="Bottom">
            <Button IsCancel="True" Content="Cancel" Margin="10"></Button>
            <Button x:Name="BtnAdd" IsDefault="True" Content="Add" Margin="10" Click="BtnAdd_Click"></Button>
        </StackPanel>
    </StackPanel>
</Window>
